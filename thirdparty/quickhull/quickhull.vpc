		$File	"qhArray.h"
		$File	"qhArray.inl"
		$File	"qhList.h"
		$File	"qhList.inl"
		$File	"qhHalfEdge.h"
		$File	"qhHalfEdge.cpp"
		$File	"qhConvex.h"
		$File	"qhConvex.inl"
		$File	"qhConvex.cpp"	
		$File	"qhMass.h"
		$File	"qhMass.cpp"
	}
